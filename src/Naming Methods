void drawingASquare  (Robot bot) {

           for (int i=0; i<4; i++) {
               bot.move(100);
               bot.turn(90);

          }
     }



     JLabel printSTOP () {

          JLabel label = new JLabel();
          label.setText("STOP");
          return label;
     }



